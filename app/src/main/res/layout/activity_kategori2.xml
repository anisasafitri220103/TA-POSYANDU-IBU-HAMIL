<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Kategori2Activity"
    android:background="@drawable/background"
    android:orientation="vertical">

    <ImageView
        android:layout_width="470dp"
        android:layout_height="320dp"
        android:layout_marginTop="40sp"
        android:layout_marginLeft="-2dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:src="@drawable/edup" />

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_kedukatif"
        android:layout_width="360dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="#9BBEC8">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:src="@drawable/edukasi"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/text_makanan"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppinsbold"
            android:gravity="center_horizontal"
            android:text="EDUKASI IBU UNTUK HAMIL DAN JANIN"
            android:textColor="@color/black"
            android:textSize="17dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/edukasi"
        android:layout_width="360dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="#9BBEC8">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:src="@drawable/hjadwal"
                tools:ignore="VectorDrawableCompat" />
        </LinearLayout>

        <TextView
            android:id="@+id/jadwal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/poppinsbold"
            android:gravity="center_horizontal"
            android:text="INFORMASI JADWAL POSYANDUN"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

</LinearLayout>

