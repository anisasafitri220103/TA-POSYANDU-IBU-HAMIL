<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    tools:context=".NutrisiActivity"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/R_tidur"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/nutrisi" />
   <LinearLayout
       android:layout_width="400dp"
       android:layout_height="600dp">
        <TextView
            android:id="@+id/R_txt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinssemibold"
            android:text="Nutrisi Makanan"
            android:layout_marginLeft="150sp"
            android:layout_marginTop="320sp"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/black"
            android:textSize="15sp" />

       <TextView
           android:id="@+id/R_txt_2"
           android:layout_width="300sp"
           android:layout_height="150sp"
           android:layout_marginLeft="-230dp"
           android:layout_marginTop="345dp"
           android:fontFamily="@font/poppinsmedium"
           android:text="@string/makanan"
           android:textColor="@color/black"
           android:textSize="10sp" />
       <TextView
           android:id="@+id/R_txt_3"
           android:layout_width="300sp"
           android:layout_height="150sp"
           android:layout_marginLeft="-300dp"
           android:layout_marginTop="510dp"
           android:fontFamily="@font/poppinsmedium"
           android:text="@string/nutrisi"
           android:textColor="@color/black"
           android:textSize="10sp" />
   </LinearLayout>
    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/btn_knutrisi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="640dp"
        android:fontFamily="@font/poppinsbold"
        android:text="kembali"
        android:textColor="@color/white"
        android:textSize="15dp" />

</RelativeLayout>