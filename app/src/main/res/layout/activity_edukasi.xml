<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EdukasiActivity"
    android:background="@drawable/background"
    android:orientation="vertical">

    <ImageView
        android:layout_width="470dp"
        android:layout_height="320dp"
        android:layout_marginTop="40sp"
        android:layout_marginLeft="-2dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:src="@drawable/homedu" />

    <androidx.cardview.widget.CardView
        android:id="@+id/edukasi1"
        android:layout_width="350sp"
        android:layout_height="40sp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="7sp"
        app:cardBackgroundColor="#D5DCF2"
        app:cardCornerRadius="30sp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2sp">
            <TextView
                android:layout_width="350sp"
                android:layout_height="50sp"
                android:text="PolaTidur"
                android:fontFamily="@font/poppinsbold"
                android:textColor="@color/black"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/edukasi2"
        android:layout_width="350sp"
        android:layout_height="40sp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="10sp"
        app:cardBackgroundColor="#D5DCF2"
        app:cardCornerRadius="30sp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2sp"/>
        <TextView
            android:layout_width="350sp"
            android:layout_height="40sp"
            android:text="Stimulasi Janin"
            android:fontFamily="@font/poppinsbold"
            android:textColor="@color/black"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="15sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/edukasi3"
        android:layout_width="350sp"
        android:layout_height="40sp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="10sp"
        app:cardBackgroundColor="#D5DCF2"
        app:cardCornerRadius="30sp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2sp"/>
        <TextView
            android:layout_width="350sp"
            android:layout_height="40sp"
            android:text="Pola Makan"
            android:fontFamily="@font/poppinsbold"
            android:textColor="@color/black"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="15sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/edukasi4"
        android:layout_width="350sp"
        android:layout_height="40sp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="10sp"
        app:cardBackgroundColor="#D5DCF2"
        app:cardCornerRadius="30sp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2sp"/>
        <TextView
            android:layout_width="350sp"
            android:layout_height="40sp"
            android:text="Olahraga"
            android:fontFamily="@font/poppinsbold"
            android:textColor="@color/black"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="15sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/edukasi5"
        android:layout_width="350sp"
        android:layout_height="40sp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="10sp"
        app:cardBackgroundColor="#D5DCF2"
        app:cardCornerRadius="30sp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2sp"/>
        <TextView
            android:layout_width="350sp"
            android:layout_height="40sp"
            android:text="Tanda Bahaya"
            android:fontFamily="@font/poppinsbold"
            android:textColor="@color/black"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="15sp"
            android:layout_marginTop="7sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/edukasi6"
        android:layout_width="350sp"
        android:layout_height="40sp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="40sp"
        app:cardBackgroundColor="#711DB0"
        app:cardCornerRadius="30sp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2sp"/>
        <TextView
            android:layout_width="350sp"
            android:layout_height="40sp"
            android:text="Tambahkan Keluhan"
            android:fontFamily="@font/poppinsbold"
            android:textColor="@color/white"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="15sp"
            android:layout_marginTop="5sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>



</LinearLayout>

