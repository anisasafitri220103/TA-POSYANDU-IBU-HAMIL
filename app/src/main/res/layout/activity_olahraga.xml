<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/R_tidur"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:src="@drawable/olahraga" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/R_txt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinssemibold"
            android:text="Olahraga"
            android:layout_marginLeft="156sp"
            android:layout_marginTop="320sp"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/R_txt_2"
            android:layout_width="400sp"
            android:layout_height="200sp"
            android:layout_below="@id/R_tidur"
            android:layout_marginLeft="-220sp"
            android:layout_marginTop="360dp"
            android:gravity="center_vertical|center_horizontal"
            android:fontFamily="@font/poppinsmedium"
            android:text="Selama kehamilan, tidak banyak ibu yang melakukan olahraga dan aktivitas fisik. Padahal, salah satu manfaatnya adalah meningkatkan kecerdasan janin. Ibu hamil kurang aktif biasanya disebabkan kurangnya pengetahuan dan motivasi untuk melakukannya. Resiko kegemukan pada bayi akan berkurang jika ibu menjaga berat badan selama kehamilan dan menumbuhkan kecerdasan intelektual janin."
            android:textColor="@color/black"
            android:textSize="15sp" />

    </LinearLayout>
    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/btn_kolahraga"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="590dp"
        android:fontFamily="@font/poppinsbold"
        android:text="selanjutnya"
        android:textColor="@color/white"
        android:textSize="15dp" />
    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/btn_nextolahraga"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="640dp"
        android:fontFamily="@font/poppinsbold"
        android:text="kembali"
        android:textColor="@color/white"
        android:textSize="15dp" />



</RelativeLayout>