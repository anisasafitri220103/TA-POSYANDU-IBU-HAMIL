<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background"
    tools:context=".TentangActivity">

    <ImageView
        android:id="@+id/L_img_1"
        android:layout_width="413dp"
        android:layout_height="180dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tentang Aplikasi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:fontFamily="@font/poppinssemibold"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:id="@+id/text1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:text=" Aplikasi ini memiliki fitur-fitur yang dapat membantu ibu hamil untuk meningkatkan pengetahuan dan kesadarannya tentang kesehatan kehamilan, serta memudahkan ibu hamil dalam mengakses informasi kesehatan.
        Dengan adanya aplikasi Android Posyandu Edukasi Ibu Hamil, diharapkan ibu hamil dapat memperoleh informasi kesehatan yang dapat meningkatkan pengetahuan dan kesadarannya tentang kesehatan kehamilan."
        android:fontFamily="@font/poppinsregular"
        android:padding="20dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:id="@+id/text2" />

    <Button
        android:id="@id/btn_tentang"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/L_img_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:fontFamily="@font/poppinsbold"
        android:text="kembali"
        android:textColor="@color/white"
        android:textSize="18sp" />
</RelativeLayout>
